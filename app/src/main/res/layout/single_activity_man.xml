<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/plotname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plot Name"
            android:textColor="#000"
            android:textSize="24sp" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/location"
           android:layout_below="@id/plotname"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_time"
            android:layout_below="@id/location"
            android:text="2019-03-23 00:00:00"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_title"
            android:layout_below="@id/date_time"
            android:text="Activity Name"
            android:textSize="18sp"
            android:textColor="@color/cBlack"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/area_covered"
        android:layout_below="@id/activity_title"
        android:text="Area Covered: "/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deatils"
        android:layout_below="@id/area_covered"
        android:text="Details"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comments"
        android:layout_below="@id/deatils"
        android:text="Comments"/>






    </RelativeLayout>


</android.support.v7.widget.CardView>