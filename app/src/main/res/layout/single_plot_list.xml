<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/plot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000"
            android:text="Texas"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/farm_name"
            android:text="Farm Name"
            android:layout_below="@+id/plot_name"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager"
            android:id="@+id/plotmanager"
            android:layout_toRightOf="@+id/size_id"
            android:layout_below="@+id/description"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"/>


        <!--<ImageView
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:layout_alignParentEnd="true"/>-->
        <TextView
            android:id="@+id/location_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location : Janakpuri New DElhi"
            android:visibility="visible"
            android:layout_below="@id/farm_name"
            android:textStyle="bold"
            />
        <!-- <ImageView
             android:id="@+id/delete_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dp"
             android:layout_alignParentEnd="true"
             android:layout_below="@id/edit_btn"
             app:srcCompat="@android:drawable/ic_menu_delete" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: gsgdsfskfgffjfergbfbsfh"
            android:id="@+id/description"
            android:textStyle="bold"

            android:layout_below="@+id/location_id"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size(in acres): 10"
            android:id="@+id/size_id"
            android:textStyle="bold"
            android:layout_below="@+id/description"
            />

    </RelativeLayout>







</android.support.v7.widget.CardView>